@using System.Globalization
@* @model Category *@

  <div class="navbar bg-danger navbar-dark navbar-expand-sm">
        <div class="container">
            <a href="/" class="navbar-brand">MyBookLibrary</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @* <a href="/products/list" class="nav-link">Products</a> *@
                    <div class="dropdown">
                        <button href="/products/list" class="btn dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @* Products *@
                            @* @{var currentCulture = CultureInfo.CurrentCulture.Name;} *@
                            @_localization.GetKey("Products", "tr-TR")
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/products/aksiyon">@_localization.GetKey("DropdownItem1", "tr-TR")</a>
                            <a class="dropdown-item" href="/products/macera">Macera</a>
                            <a class="dropdown-item" href="/products/tarih">Tarih</a>
                            <a class="dropdown-item" href="/products/edebi">Edebi</a>
                        </div>
                    </div>
                </li>

                @if(User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/cart" class="nav-link">Cart</a>
                    </li>
                    @* <li class="nav-item">
                        <a href="/order" class="nav-link">Orders</a>
                    </li>                         *@

                    if(User.IsInRole("admin"))
                    {
                         <li class="nav-item">
                        <a href="/admin/products" class="nav-link">Admin Products</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/categories" class="nav-link">Admin Categories</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/rolelist" class="nav-link">Roles</a>
                        </li>
                         <li class="nav-item">
                            <a href="/admin/userlist" class="nav-link">Users</a>
                        </li>
                    }                      
                }
            </ul>

             <ul class="navbar-nav ml-auto">

                @if(User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/account/manage" class="nav-link">
                            @User.Identity.Name
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/account/logout" class="nav-link">Logout</a>
                    </li>
                }
                else
                {                    
                    <li class="nav-item">
                        <a href="/account/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/account/register" class="nav-link">Register</a>
                    </li>    
                }
            </ul>


        </div>
    </div>